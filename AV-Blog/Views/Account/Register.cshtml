@model AV_Blog.Models.ExtendedRegisterViewModel

<head>
	<link href="~/Content/Login.css" rel="stylesheet" />
</head>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal newForm con", role = "form" }))
{
	@Html.AntiForgeryToken()
	<h2 class="txtStyle text-center">Create a new account</h2>
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
		<span class="col-md-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
		</span>
	</div>
	<div class="form-group">
		<div class="col text-center">
			<input type="submit" value="Register" class="btn btn-primary btn-outline-primary" />
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
