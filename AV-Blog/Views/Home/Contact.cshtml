@model AV_Blog.Models.EmailModel

@{
	ViewBag.Title = "Contact";
}

<head>
	<link href="~/Content/Login.css" rel="stylesheet" />
</head>

<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 newForm con">
				<h2 class="mb-4 text-center txtStyle">Let's C(h)at!</h2>
				<img src="~/Images/contact (2).jpg" alt="author" class="img-fluid w-100 mb-4">
				<h4 class="mb-5 text-center txtStyle">Email me with any questions or business inquiries. I'll be happy to follow up! <br />Thank you for stopping in!</h4>
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<h4 class="text-center txtStyle">Send me a message</h4>
					<hr />
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="form-group text-center">
						@Html.LabelFor(m => m.FromName, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.FromName, new { @class = "form-control text-center" })
							@Html.ValidationMessageFor(m => m.FromName)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.FromEmail, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control text-center", placeholder = "example@email.com" })
							@Html.ValidationMessageFor(m => m.FromEmail)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Subject, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.Subject, new { @class = "form-control text-center" })
							@Html.ValidationMessageFor(m => m.Subject)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Body, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.Body, new { @class = "form-control" })
							@Html.ValidationMessageFor(m => m.Body)
						</div>
					</div>
					<div class="form-group text-center">
						<div class="col text-center">
							<input type="submit" class="btn btn-primary btn-outline-primary" value="send message" />
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>

@section scripts {
	<script src="~/Scripts/tinymce/tinymce.min.js"></script>
	<script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
	<script>
		$(function () {
			tinymce.init({
				selector: '#Body'
			});
		});
	</script>
}
