@model AV_Blog.Models.EmailModel

@{
	ViewBag.Title = "Contact";
}


<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="mb-4 text-center">Let's C(h)at!</h2>
				<img src="~/Images/contact.jpg" alt="author" class="img-fluid w-100 mb-4">
				<p class="mb-5">Strikes the upper surface of the impenetrable foliage of my trees, and but a few stray gleams steal into the inner sanctuary, I throw myself down among the tall grass by the trickling stream and, as I lie close to the earth, a thousand unknown plants are noticed by me.<br><br>When I hear the buzz of the little world among the stalks, and grow familiar with the countless indescribable forms of the insects and flies, then I feel the presence of the Almighty, who formed us in his own image, and the breath of that universal love which bears and sustains.</p>
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<h4 class="text-center">Send me a message</h4>
					<hr />
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="form-group text-center">
						@Html.LabelFor(m => m.FromName, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.FromName, new { @class = "form-control text-center" })
							@Html.ValidationMessageFor(m => m.FromName)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.FromEmail, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control text-center", placeholder = "example@email.com" })
							@Html.ValidationMessageFor(m => m.FromEmail)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Subject, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.Subject, new { @class = "form-control text-center" })
							@Html.ValidationMessageFor(m => m.Subject)
						</div>
					</div>
					<div class="form-group">
						@Html.LabelFor(m => m.Body, new { @class = "col-12 control-label text-center" })
						<div class="col-12">
							@Html.TextBoxFor(m => m.Body, new { @class = "form-control" })
							@Html.ValidationMessageFor(m => m.Body)
						</div>
					</div>
					<div class="form-group text-center">
						<div class="col-offset-2 col-12">
							<input type="submit" class="btn" value="send" />
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>

@section scripts {
	<script src="~/Scripts/tinymce/tinymce.min.js"></script>
	<script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
	<script>
		$(function () {
			tinymce.init({
				selector: '#Body'
			});
		});
	</script>
}
